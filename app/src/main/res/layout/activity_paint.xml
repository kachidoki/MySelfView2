<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.kachidoki.myselfview2.VolumControlBar
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_marginTop="20dp"
    app:bg="@mipmap/ic_launcher"
    app:circleWidth="12dp"
    app:dotCount="20"
    app:firstColor="#252420"
    app:secondColor="#FDFDFD"
    app:splitSize="25"
    />
    <com.kachidoki.myselfview2.CustomImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:image="@mipmap/ic_launcher"
    app:imageScaleType="center"
    app:titleText="hello_android!"
    app:titleTextColor="#ff0000"
    app:titleTextSize="30sp"
    />

</LinearLayout>